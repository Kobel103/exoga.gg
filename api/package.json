{
  "name": "exoga.gg-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc && copy package.json dist",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,cjs}\"",
    "extract-i18n": "i18next --config i18next-parser.config.cjs",
    "test": "vitest",
    "start": "tsx --env-file=.env --watch src/index.ts",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Exoga eSport Team",
  "license": "ISC",
  "description": "exoga.gg API server",
  "dependencies": {
    "@automapper/classes": "^8.8.1",
    "@automapper/core": "^8.8.1",
    "@automapper/pojos": "^8.8.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "crypto-browserify": "^3.12.1",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "i18next": "^25.2.1",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-backend": "^3.0.2",
    "i18next-http-middleware": "^3.7.4",
    "i18next-parser": "^9.3.0",
    "jsonwebtoken": "^9.0.2"
  },
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/i18next": "^12.1.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.18.10",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,json,scss}": [
      "prettier --write"
    ]
  }
}
